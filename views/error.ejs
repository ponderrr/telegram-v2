<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header bg-danger text-white">
        <h3>Error</h3>
      </div>
      <div class="card-body">
        <% if (typeof error !== 'undefined') { %>
        <p class="alert alert-danger"><%= error %></p>
        <% } else { %>
        <p class="alert alert-danger">An unknown error occurred.</p>
        <% } %>
        <div class="mt-3">
          <a href="/dashboard" class="btn btn-primary">Back to Dashboard</a>
          <a href="/topics" class="btn btn-outline-secondary">Browse Topics</a>
        </div>
      </div>
    </div>
  </div>
</div>
